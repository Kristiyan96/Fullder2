<% if current_order.errors.any? || @order_item.errors.any? %>
  $('.flash-container').html("<%= j render 'layouts/flash_messages' %>");
<% else %>
  $("#bill").html("<%= j render 'carts/buy_button' %>");
  $('#order-items').append("<%= j render 'carts/order_item', order_item: @order_item %>");
<% end %>


